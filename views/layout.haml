:plain
  <!DOCTYPE html>
%html{:lang => 'en'}
  %head
    %meta{:charset => "utf-8"}
    %title="Bootstrap, from Twitter"
    %meta{:name => "viewport", :content => "width=device-width", :"initial-scale" => "1.0"}
    %meta{:name => "description", :content => ""}
    %meta{:name => "author", :content => ""}

    / Le styles
    %link{:href => "/bootstrap/less/bootstrap.less", :rel => "stylesheet/less"}
    %style{:type => "text/css"}
      :plain
        body {
          padding-top: 60px;
          padding-bottom: 40px;
        }
    %link{:href => "/bootstrap/less/responsive.less", :rel => "stylesheet/less"}
    %script{:type => "text/javascript", :src => "js/less-1.3.0.min.js"}
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"}

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    :plain
      <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->

    / Le fav and touch icons
    %link{:rel => "shortcut icon", :href => "../assets/ico/favicon.ico"}
    %link{:rel => "apple-touch-icon-precomposed", :sizes => "114x114", :href => "../assets/ico/apple-touch-icon-114-precomposed.png"}
    %link{:rel => "apple-touch-icon-precomposed", :sizes => "72x72", :href => "../assets/ico/apple-touch-icon-72-precomposed.png"}
    %link{:rel => "apple-touch-icon-precomposed", :href => "../assets/ico/apple-touch-icon-57-precomposed.png"}

  %body
    %div{:class => "navbar navbar-fixed-top"}
      .navbar-inner
        .container
          %a{:class => "btn btn-navbar", :"data-toggle" => "collapse", :"data-target" => ".nav-collapse"}
            %span{:class => "icon-bar"}
            %span{:class => "icon-bar"}
            %span{:class => "icon-bar"}
          %a{:class => "brand", :href => "#"}="Project name"
          .nav-collapse
            %ul{:class => "nav"}
              %li{:class => "active"}
                %a{:href => "#"}="Home"
              %li
                %a{:href => "#about"}="About"
              %li
                %a{:href => "#contact"}="Contact"
            %ul{:class => 'nav pull-right'}
              - if logged_in?
                .identity
                  %a{:href => "/users/#{current_user.id}"}= current_user.name
                  |
                  %a{:href => "/logout"} logout
              - else
                %li{:class => "dropdown"}
                  %a{:class => "dropdown-toggle", :"data-toggle" => "dropdown", :href => "#"}
                    Login
                    %b{:class => "caret right"}
                  %ul{:class => "dropdown-menu dropdown-form", :style => "padding: 15px;"}
                    %form{:action => "/login", :method => 'post', :class => ""}
                      %input{:id => 'user_email', :name => 'email', :class => "span3", :type => "text", :placeholder => "Username"}
                      %input{:id => 'user_password', :name => 'password', :class => "span3", :type => "password", :placeholder => "Password"}
                      %button{:type => "submit", :class => "btn submit pull-right"}
                        Sign in

    .container

      / Main hero unit for a primary marketing message or call to action
      = yield

      %hr

      %footer
        %p="&copy; Company 2012"

    / Le javascript
    / ==================================================
    / Placed at the end of the document so the pages load faster
    %script{:src => "/bootstrap/js/bootstrap-transition.js"}
    %script{:src => "/bootstrap/js/bootstrap-alert.js"}
    %script{:src => "/bootstrap/js/bootstrap-modal.js"}
    %script{:src => "/bootstrap/js/bootstrap-dropdown.js"}
    %script{:src => "/bootstrap/js/bootstrap-scrollspy.js"}
    %script{:src => "/bootstrap/js/bootstrap-tab.js"}
    %script{:src => "/bootstrap/js/bootstrap-tooltip.js"}
    %script{:src => "/bootstrap/js/bootstrap-popover.js"}
    %script{:src => "/bootstrap/js/bootstrap-button.js"}
    %script{:src => "/bootstrap/js/bootstrap-collapse.js"}
    %script{:src => "/bootstrap/js/bootstrap-carousel.js"}
    %script{:src => "/bootstrap/js/bootstrap-typeahead.js"}
